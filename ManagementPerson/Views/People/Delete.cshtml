@model ManagementPerson.Models.Person

@{
    ViewData["Title"] = "Delete Person";
}

<h1>Delete Person</h1>

<h4>Are you sure you want to delete this?</h4>
<hr />
<dl class="row">
    <dt class = "col-sm-2">
        Name
    </dt>
    <dd class = "col-sm-10">
        @Model.Name
    </dd>
    <dt class = "col-sm-2">
        Phone Number
    </dt>
    <dd class = "col-sm-10">
        @Model.PhoneNumber
    </dd>
    <dt class = "col-sm-2">
        Email Address
    </dt>
    <dd class = "col-sm-10">
        @Model.EmailAddress
    </dd>
    <dt class = "col-sm-2">
        Address
    </dt>
    <dd class = "col-sm-10">
        @Model.Address.Name, @Model.Address.Number
    </dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="PersonId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>
